@{
    // Check if the specialties have been populated
    var specialties = ViewBag.Specialties as IEnumerable<SelectListItem>; // Adjust the type as necessary
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="bg-white p-4 rounded shadow-lg">
                <h2 class="text-center mb-4 text-primary">Find Your Doctor</h2>
                <form class="searchform">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="specialty" class="form-label">I'm looking for a doctor</label>
                            <select class="form-select" id="specialty" name="specialty" asp-items="specialties">
                                <option selected value="0">Choose specialty</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label for="governorate" class="form-label">In governorate</label>
                            <select class="form-select" id="governorate">
                                <option value="" selected>Choose governorate</option>
                                <option value="Cairo">Cairo</option>
                                <option value="Giza">Giza</option>
                                <option value="Alexandria">Alexandria</option>
                                <option value="Port Said">Port Said</option>
                                <option value="Suez">Suez</option>
                                <option value="Mansoura">Mansoura</option>
                                <option value="Tanta">Tanta</option>
                                <option value="Ismailia">Ismailia</option>
                                <option value="Fayoum">Fayoum</option>
                                <option value="Zagazig">Zagazig</option>
                                <option value="Asyut">Asyut</option>
                                <option value="Sohag">Sohag</option>
                                <option value="Luxor">Luxor</option>
                                <option value="Aswan">Aswan</option>
                                <option value="Damanhur">Damanhur</option>
                                <option value="Damietta">Damietta</option>
                                <option value="Minya">Minya</option>
                                <option value="Beni Suef">Beni Suef</option>
                                <option value="Qena">Qena</option>
                                <option value="Kafr El Sheikh">Kafr El Sheikh</option>
                                <option value="Hurghada">Hurghada</option>
                                <option value="Sharm El Sheikh">Sharm El Sheikh</option>
                                <option value="El-Mahalla El-Kubra">El-Mahalla El-Kubra</option>
                                <option value="Banha">Banha</option>
                                <option value="Arish">Arish</option>
                                <option value="Qalyub">Qalyub</option>
                                <option value="Helwan">Helwan</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label for="doctor" class="form-label">type a name</label>
                            <input type="text" class="form-control" id="doctor" name="doctor" placeholder="Doctor or hospital name">
                        </div>

                        <div class="col-12 mt-4">
                            <button id="submit" type="submit" class="btn btn-primary btn-lg w-100">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row mt-5" id="ParentCard">
        <!-- Doctor results will be dynamically inserted here -->
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <nav aria-label="Doctor search results pages">
                <ul class="pagination justify-content-center" id="pagination-container"></ul>
            </nav>
        </div>
    </div>
</div>

<script src="~/js/doctorsearch.js"></script>

