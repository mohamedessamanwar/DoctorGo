@using BusinessAccessLayer.DataViews.TimeSlotView
@model IEnumerable<TimeSlotView>
@{

}



@if (!Model.Any())
{
    <p>No Appointments Found</p>
}
else
{
    <table  class="table table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">Appointment Time</th>
                <th>Booking Now</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var timeSlot in Model)
            {
                <tr class="table-secondary">
                    <td>@timeSlot.AppointmentTime</td>
                    <td>
                        @if(timeSlot.IsActive == true){

                            <a class="btn btn-primary " asp-controller="Booking"  asp-action="Book" asp-route-TimeSlotId="@timeSlot.Id">Booking Now</a>
                        }
                        else
                        {
                            <a class="btn btn-primary disabled" asp-controller="Book" asp-action="Book" asp-route-TimeSlotId="@timeSlot.Id">Booking Now</a>
                            
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}