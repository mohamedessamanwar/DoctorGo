<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoDoctor</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <style>
        .navbar-nav .nav-link.active {
            font-weight: bold;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .navbar-nav .nav-link:hover {
            background-color: rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

        .navbar-nav .nav-link[aria-current="page"]:hover {
            background-color: rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <i class="fas fa-user-md me-2"></i>Go Doctor
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" asp-controller="Admin" asp-action="Index" aria-current="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "page" : null)">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "DoctorsStatus" ? "active" : "")" asp-controller="Admin" asp-action="DoctorsStatus">
                                <i class="fas fa-user-md me-1"></i>Doctor Status
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "SpecialtyManagement" ? "active" : "")" asp-controller="Admin" asp-action="SpecialtyManagement">
                                <i class="fas fa-stethoscope me-1"></i>Specialty Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "AddNewAdmin" ? "active" : "")" asp-controller="Admin" asp-action="AddNewAdmin">
                                <i class="fas fa-user-plus me-1"></i>Add New Admin
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "GoAsDoctor" ? "active" : "")" asp-controller="Doctor" asp-action="GoAsDoctor">
                                <i class="fas fa-user-md me-1"></i>Go As Doctor
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ResetPasswordView" ? "active" : "")" asp-controller="Auth" asp-action="ResetPasswordView">
                                <i class="fas fa-key me-1"></i>Reset Password
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Logout" ? "active" : "")" asp-controller="Auth" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-1"></i>LogOut
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 GoDoctor. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>